/* pages/lobby/index.wxss */

page {
  height: 100%;
  width: 100%;
  box-sizing: border-box;
}

.container {
  width: 100%;
  height: 100%;
  background: #2d292d;
  box-sizing: border-box;
  padding: 0;
}

/* title 
-------------------------------------------------------------- */

.container .title {
  width: 100%;
  height: 25%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 70rpx;
  box-sizing: border-box;
  position: relative;
}

.container .title .btn-music {
  width: 64rpx;
  height: 60rpx;
  position: absolute;
  left: 50rpx;
  top: 40rpx;
}

.container .title .btn-music .toggle-music {
  width: 64rpx;
  height: 60rpx;
  position: absolute;
  top: 0;
}

.container .title .image-title {
  width: 300rpx;
  height: 104rpx;
  position: absolute;
  bottom: 20rpx;
}

/* end title 
-------------------------------------------------------------- */


/* content
---------------------------------------------------------------*/
.container .content {
  width: 100%;
  height: 75%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
}

.container .content .tutorial{
  width: 550rpx;
  height: 300rpx;
  background: lightgray;
  border-radius: 50rpx;
}

.container .content .bestSocre {
  color: white;
  font-size: 40rpx;
}

.container .content .button-container {
  width: 100%;
  height: 40%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.container .content .start-game {
  background: lightgreen;
  width: 80%;
  border-radius: 60rpx;
  height: 100rpx;
}

.container .content .tool-bar {
  width: 80%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.container .content .tool-bar .btn-share {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-size: 96rpx 96rpx;
  border: 0;
}

.container .content .tool-bar image {
  width: 96rpx;
  height: 96rpx;
  position: relative;
}

.container .content .tool-bar image {
  width: 96rpx;
  height: 96rpx;
  position: relative;
}
