/* pages/lobby/index.wxss */

page {
  height: 100%;
  width: 100%;
  box-sizing: border-box;
}

.container {
  width: 100%;
  height: 100;
  background: #2d292d;
  box-sizing: border-box;
}

.container .title {
  width: 100%;
  height: 0%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 70rpx;
  box-sizing: border-box;
}

.container .content {
  width: 100%;
  height: 85%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
}

.container .content .bestSocre {
  color: white;
  font-size: 40rpx;
}

.container .content .button-container {
  width: 100%;
  height: 40%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.container .content .start-game {
  background: lightgreen;
  width: 80%;
  border-radius: 60rpx;
  height: 100rpx;
}

.container .content .tool-bar {
  width: 80%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.container .content .tool-bar .btn-share {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-size: 96rpx 96rpx;
  border: 0;
}

.container .content .tool-bar image {
  width: 96rpx;
  height: 96rpx;
  position: relative;
}

.container .content .tool-bar image {
  width: 96rpx;
  height: 96rpx;
  position: relative;
}
